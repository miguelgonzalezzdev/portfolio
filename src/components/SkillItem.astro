---
const { 
    icon: Icon, 
    label, 
    width = 48, 
    height = 48,
    className = ""
} = Astro.props;
---

<div class={`flex flex-col items-center text-center opacity-0 flip-hover ${className}`}>
    <Icon width={width} height={height} />
    <p class="mt-2 text-md font-semibold">{label}</p>
</div>
