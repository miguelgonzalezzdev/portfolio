---
import '@fontsource-variable/onest'
import "../styles/global.css";

export interface Props {
	title: string;
	description?: string;
}

const { title = "Portfolio - Miguel González García", description = "Portfolio profesional de Miguel González García, desarrollador web." } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="inicio" class="grid grid-rows-[auto_1fr_auto] min-h-screen relative bg-neutral-950 text-zinc-100 bg-checkered-pattern">
		<slot />
	</body>
</html>
